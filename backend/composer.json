{
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.7",
        "ext-pdo": "*"  
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"  
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"  
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"  
        }
    },
    "scripts": {
        "start": "php -S localhost:9000 -t public",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}